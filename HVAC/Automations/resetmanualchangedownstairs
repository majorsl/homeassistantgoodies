alias: "[Smart Climate] Reset Downstairs Manual Override"
description: Resets manual override after timer finishes or on restart if timer is idle
triggers:
  - event_type: timer.finished
    event_data:
      entity_id: timer.climate_downstairs_manual_override_timer
    trigger: event
  - event: start
    trigger: homeassistant
conditions:
  - condition: state
    entity_id: timer.climate_downstairs_manual_override_timer
    state: idle
  - condition: state
    entity_id: input_boolean.climate_downstairs_manual_override
    state: "on"
actions:
  - target:
      entity_id: input_boolean.climate_downstairs_manual_override
    action: input_boolean.turn_off
mode: single
